{
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "ic/ic128.png",
        "default_title": "__MSG_appName__",
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; worker-src 'none'; connect-src https://*.facebook.com https://*.lzdev.org"
    },
    "default_locale": "en",
    "description": "__MSG_appDescription__",
    "homepage_url": "https://lzdev.org/",
    "icons": {
        "16": "ic/ic16.png",
        "32": "ic/ic32.png",
        "48": "ic/ic48.png",
        "128": "ic/ic128.png"
    },
    "incognito": "split",
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "permissions": [
        "cookies",
        "tabs",
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "short_name": "__MSG_appShortName__"
}